{
  "compilerOptions": {
    "paths": {
      "-/*": ["./src/*"]
    },
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "esModuleInterop": true,
    "importsNotUsedAsValues": "preserve",
    "isolatedModules": true,
    "jsx": "react",
    "module": "ES2020",
    "moduleResolution": "node",
    "outDir": "./dist",
    "preserveValueImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2021",
    "types": ["node"]
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules", "dist"]
}
